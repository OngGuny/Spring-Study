<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"><!-- 시스템 내에서의 식별자. 전세계 공용임. -->
<mapper namespace="kr.kwangan2.springmvcboard.mapper.BoardMapper">
	<select id="boardVOList"
		resultType="kr.kwangan2.springmvcboard.domain.BoardVO">
		<![CDATA[
			select * from board where bno>0
		]]>
	</select>

	<insert id="insertBoardVO">

		<selectKey keyProperty="bno" order="BEFORE"
			resultType="long">
		<![CDATA[
			select seq_board.nextval from dual
		]]>
		</selectKey><!-- 쿼리문처럼 생긴애들 전부 cdata로 묶어주기 -->
	
		<![CDATA[
			insert into board(bno, title, content, writer)
			values(#{bno}, #{title}, #{content}, #{writer})
		]]>
	</insert><!-- 칼럼명 value 프라퍼티 명 인서트는 셀렉트 키 써서 써라. 한번에 할 수 있지만 다른데서 쓸 수가 없잖아. -->
	<insert id="insertBoardVOSelectKey">
		<selectKey keyProperty="bno" order="BEFORE"
			resultType="long">
             <![CDATA[
                select seq_board.nextval 
                from dual
              ]]>
		</selectKey>
     <![CDATA[
       insert into board 
           (bno,title,content,writer)
       values 
           (#{bno}, #{title}, #{content}, #{writer})
      ]]>
	</insert>

	<select id="selectBoardVO"
		resultType="kr.kwangan2.springmvcboard.domain.BoardVO">
       <![CDATA[
       select
          * 
       from
         board
       where
         bno = #{bno} 
       ]]>
	</select>

	<delete id="deleteBoardVO">
       <![CDATA[
       delete from 
          board 
       where bno = #{bno} 
       ]]>
	</delete>

	<update id="updateBoardVO">
      <![CDATA[
       update 
           board
        set
          title=#{title},
          content=#{content}, 
          writer=#{writer},
          updateDate=sysdate
        where
          bno=#{bno}
      ]]>

	</update>

</mapper>
